{
  "extends": "@itsmapleleaf/configs/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.astro",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/build/**",
    "**/dist/**",
    "**/.cache/**",
    "api",
    "generated",
    "server.dev.mjs"
  ]
}
